@model SFA.DAS.AdminService.Web.ViewModels.RoatpAssessor.Gateway.WebsiteViewModel

<roatp-assessor-breadcrumb route="@RouteNames.RoatpAssessor_Gateway_Website_Get"/>

<main class="govuk-main-wrapper " id="main-content" role="main">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <span class="govuk-caption-m">Organisation checks</span>
            <h1 class="govuk-heading-xl">Is the website active and correct for the organisation?</h1>

            <p class="govuk-body">
                Legal name: @Model.OrganisationName<br>
                UKPRN: @Model.Ukprn
            </p>

            <table class="govuk-table govuk-!-margin-bottom-9">
                <thead class="govuk-table__head">
                    <tr class="govuk-table__row">
                        <th scope="col" class="govuk-table__header">Source</th>
                        <th scope="col" class="govuk-table__header" colspan="2">Website</th>
                    </tr>
                </thead>
                <tbody class="govuk-table__body">
                    <tr class="govuk-table__row">
                        <th scope="row" class="govuk-table__header">Submitted application</th>
                        <td class="govuk-table__cell">@Model.WebiteUrl</td>
                        <td class="govuk-table__cell"><a href="@Model.WebiteUrl" target="_blank">Check this website</a></td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <form action="" method="post" class="form"> 
                
                <div class="govuk-form-group">
                    <partial name="_RoatpOutcome" for="Outcome" />
                </div>

                <button type="submit" class="govuk-button govuk-!-margin-right-1">
                    Save and continue
                </button>
            </form>

            <p><a href="/staff-app/v8/applications/gateway/tasklist-company">Back to application assessment overview</a></p>

        </div>
    </div>


</main>
