@using SFA.DAS.RoatpAssessor.Domain.DTOs

@model SFA.DAS.AdminService.Web.ViewModels.RoatpAssessor.Gateway.LegalChecksViewModel

<partial name="_RoatpBreadcrumb" />

<main class="govuk-main-wrapper " id="main-content" role="main">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <span class="govuk-caption-m">Initial checks</span>
            <h1 class="govuk-heading-xl">Legal and address checks</h1>

            <form asp-route="@RouteNames.RoatpAssessor_Gateway_LegalChecks_Get" class="form">

                <h2 class="govuk-heading-l govuk-!-margin-top-9" id="realtime">Does the legal name match for all sources?</h2>
                <table class="govuk-table">
                    <thead class="govuk-table__head">
                        <tr class="govuk-table__row">
                            <th scope="col" class="govuk-table__header">Source</th>
                            <th scope="col" class="govuk-table__header">Legal name</th>
                        </tr>
                    </thead>
                    <tbody class="govuk-table__body">
                        <tr class="govuk-table__row">
                            <td class="govuk-table__header">Submitted application</td>
                            <td class="govuk-table__cell">TEMP COMPANY LTD</td>
                        </tr>
                        <tr class="govuk-table__row">
                            <td class="govuk-table__header">UKRLP</td>
                            <td class="govuk-table__cell">TEMP COMPANY LTD</td>
                        </tr>
                        <tr class="govuk-table__row">
                            <td class="govuk-table__header">Companies House</td>
                            <td class="govuk-table__cell">ANOTHER TEMP COMPANY LTD</td>
                        </tr>
                    </tbody>
                </table>

                <div class="govuk-form-group">

                    <div class="govuk-radios govuk-radios--inline">

                        <div class="govuk-radios__item">
                            <input asp-for="LegalNameCheck" id="legalname_yes" class="govuk-radios__input" type="radio" value="@CheckValue.Yes">
                            <label class="govuk-label govuk-radios__label" for="legalname_yes">
                                Yes
                            </label>
                        </div>

                        <div class="govuk-radios__item">
                            <input asp-for="LegalNameCheck" id="legalname_no" class="govuk-radios__input" type="radio" value="@CheckValue.No">
                            <label class="govuk-label govuk-radios__label" for="legalname_no">
                                No
                            </label>
                        </div>
                    </div>
                </div>

                <h2 class="govuk-heading-l govuk-!-margin-top-9" id="realtime">Is the status correct for all sources?</h2>
                <p class="govuk-body">
                    For companies, the status must be ‘active’ for each source.<br>
                    For charities, the status must be ‘XXX’ for each source.<br>
                    For any other organisation type, the status must be ‘XXX’ for each source.
                </p>
                <table class="govuk-table">
                    <thead class="govuk-table__head">
                        <tr class="govuk-table__row">
                            <th scope="col" class="govuk-table__header">Source</th>
                            <th scope="col" class="govuk-table__header">Status</th>
                        </tr>
                    </thead>
                    <tbody class="govuk-table__body">
                        <tr class="govuk-table__row">
                            <td class="govuk-table__header">UKRLP</td>
                            <td class="govuk-table__cell">Active</td>
                        </tr>
                        <tr class="govuk-table__row">
                            <td class="govuk-table__header">Companies House</td>
                            <td class="govuk-table__cell">Dissolved</td>
                        </tr>
                    </tbody>
                </table>

                <div class="govuk-form-group">
                    <div class="govuk-radios govuk-radios--inline">
                        <div class="govuk-radios__item">
                            <input asp-for="StatusCheck" class="govuk-radios__input" id="statuscheck_yes" type="radio" value="@CheckValue.Yes">
                            <label class="govuk-label govuk-radios__label" for="statuscheck_yes">
                                Yes
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input asp-for="StatusCheck" class="govuk-radios__input" id="statuscheck_no" type="radio" value="@CheckValue.No">
                            <label class="govuk-label govuk-radios__label" for="statuscheck_no">
                                No
                            </label>
                        </div>
                    </div>
                </div>

                <h2 class="govuk-heading-l govuk-!-margin-top-9" id="realtime">Does the address match for all sources?</h2>
                <table class="govuk-table">
                    <thead class="govuk-table__head">
                        <tr class="govuk-table__row">
                            <th scope="col" class="govuk-table__header">Source</th>
                            <th scope="col" class="govuk-table__header">Address</th>
                        </tr>
                    </thead>
                    <tbody class="govuk-table__body">
                        <tr class="govuk-table__row">
                            <td class="govuk-table__header">Submitted application</td>
                            <td class="govuk-table__cell">A Road,<br>Gloucester,<br>Gloucestershire,<br>GL2 9QH</td>
                        </tr>
                        <tr class="govuk-table__row">
                            <td class="govuk-table__header">UKRLP</td>
                            <td class="govuk-table__cell">A Road,<br>Gloucester,<br>Gloucestershire,<br>GL2 9QH</td>
                        </tr>
                        <tr class="govuk-table__row">
                            <td class="govuk-table__header">Companies House</td>
                            <td class="govuk-table__cell">A Road,<br>Gloucester,<br>Gloucestershire,<br>GL2 9QH</td>
                        </tr>
                    </tbody>
                </table>

                <div class="govuk-form-group">

                    <div class="govuk-radios govuk-radios--inline">
                        <div class="govuk-radios__item">
                            <input asp-for="AddressCheck" class="govuk-radios__input" id="addresscheck_yes" type="radio" value="@CheckValue.Yes">
                            <label class="govuk-label govuk-radios__label" for="addresscheck_yes">
                                Yes
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input asp-for="AddressCheck" class="govuk-radios__input" id="addresscheck_no" type="radio" value="@CheckValue.No">
                            <label class="govuk-label govuk-radios__label" for="addresscheck_no">
                                No
                            </label>
                        </div>
                    </div>
                </div>

                <partial name="_RoatpOutcome" for="Outcome" />

                <button type="submit" class="govuk-button govuk-!-margin-right-1">
                    Save and continue
                </button>
            </form>
        </div>
    </div>
</main>