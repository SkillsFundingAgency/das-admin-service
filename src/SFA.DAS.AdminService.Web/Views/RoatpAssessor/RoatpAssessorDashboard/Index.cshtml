@model SFA.DAS.AdminService.Web.ViewModels.RoatpAssessor.RoatpAssessorDashboardIndexViewModel

<h1 class="govuk-heading-l">Roatp Assessor Dashboard</h1>

<h2 class="govuk-heading-m">Submitted Applications</h2>
@foreach (var application in Model.SubmittedApplications)
{
    <form asp-controller="RoatpAssessorDashboard" asp-action="StartReview" asp-route-applicationId="@application">
        <div class="govuk-body">applicationId: @application</div>
        <button class="govuk-button" type="submit">Start Review</button>
    </form>
}
@if (!Model.SubmittedApplications.Any())
{
    <div class="govuk-body">There are no submitted applications</div>
}

<hr />

<h1 class="govuk-heading-l">Gateway</h1>

<a class="govuk-link" asp-controller="RoatpAssessorGateway" asp-action="Dashboard">Gateway Dashboard</a>

<hr />

<h1 class="govuk-heading-l">PMO</h1>
<h2 class="govuk-heading-m">Applications pending PMO review</h2>
@foreach (var application in Model.PmoReviewsPending)
{
