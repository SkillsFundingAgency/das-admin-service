        <button class="govuk-button" type="submit">Start PMO Review</button>
    </form>
}
@if (!Model.PmoReviewsPending.Any())
{
    <div class="govuk-body">There are no applications pending PMO review</div>
}

<h2 class="govuk-heading-m">Applications under PMO review</h2>
@foreach (var application in Model.PmoReviewsUnderReview)
{
    <div class="govuk-body">
        <a asp-controller="RoatpAssessorPMO" asp-action="Index" asp-route-applicationId="@application">
            applicationId: @application
        </a>
    </div>
}
@if (!Model.GatewayReviewsUnderReview.Any())
{
    <div class="govuk-body">There are no applications under Gateway review</div>
}

<hr />
