@using SFA.DAS.AssessorService.Domain.Extensions
@model SFA.DAS.AdminService.Web.ViewModels.Roatp.Gateway.RoatpPageViewModel

@{
    ViewBag.Title = $"Gateway - {Model.Heading}";
    Layout = "_Layout";
}

<partial name="~/Views/Roatp/Apply/Gateway/Pages/_GatewayAssessmentBreadcrumb.cshtml" />
<main class="govuk-main-wrapper " id="main-content" role="main">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <partial name="~/Views/Roatp/Apply/Gateway/Pages/_GatewayApprovalValidationSummary.cshtml" />
            <span class="govuk-caption-xl">
                @Model.Caption
            </span>
            <h1 class="govuk-heading-xl">@Model.Heading</h1>

            <div class="govuk-!-margin-bottom-4">
                @if (Model.Ukprn != null)
                {
                    <p class="govuk-body govuk-!-margin-bottom-0">
                        UKPRN: @Model.Ukprn
                    </p>
                }

                @if (Model.ApplyLegalName != null)
                {
                    <p class="govuk-body govuk-!-margin-bottom-0">
                        Legal name: @Model.ApplyLegalName
                    </p>
                }

                @if (Model.ApplicationSubmittedOn != null)
                {
                    <p class="govuk-body govuk-!-margin-bottom-0">
                        Application submitted on: @Model.ApplicationSubmittedOn.ToSfaShortDateString()
                    </p>
                }

                @if (Model.SourcesCheckedOn != null)
                {
                    <p class="govuk-body govuk-!-margin-bottom-0">
                        Sources checked on:  @Model.SourcesCheckedOn.ToSfaShortDateString()
                    </p>
                }
            </div>
        </div>
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <table class="govuk-table govuk-!-margin-bottom-9">
                <thead class="govuk-table__head">
                    <tr class="govuk-table__row">
                        <th class="govuk-table__header" scope="col">Source</th>
                        <th class="govuk-table__header" scope="col">Status</th>
                    </tr>
                </thead>
                <tbody class="govuk-table__body">
                    @if (!Model.RoatpUkprnOnRegister)
                    {
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">RoATP data</td>
                            <td class="govuk-table__cell">Not applicable</td>
                        </tr>
                    }
                    else if (!string.IsNullOrEmpty(Model.RoatpRemovedReason))
                    {
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">RoATP data</td>
                            <td class="govuk-table__cell">
                                @Model.RoatpStatus<br />
                                @Model.RoatpProviderRoute<br />
                                @Model.RoatpStatusDate.ToSfaShortDateString()<br />
                                @Model.RoatpRemovedReason
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">Submitted application data</td>
                            <td class="govuk-table__cell">@Model.ApplyProviderRoute</td>
                        </tr>
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">RoATP data</td>
                            <td class="govuk-table__cell">
                                @Model.RoatpStatus<br />
                                @Model.RoatpProviderRoute
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (Model.ApplicationId != Guid.Empty)
    {
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <form class="js-disable-on-submit" asp-action="EvaluateRoatpPage" asp-controller="RoatpGatewayRegisterChecks">
                    <input type="hidden" asp-for="ApplicationId" />
                    <input type="hidden" asp-for="PageId" />
                    <input type="hidden" asp-for="Caption" />
                    <input type="hidden" asp-for="Heading" />
                    <input type="hidden" asp-for="NoSelectionErrorMessage" />
                    <input type="hidden" asp-for="Ukprn" />
                    <input type="hidden" asp-for="ApplicationSubmittedOn" />
                    <input type="hidden" asp-for="SourcesCheckedOn" />
                    <input type="hidden" asp-for="ApplyLegalName" />
                    <input type="hidden" asp-for="ApplyProviderRoute" />
                    <input type="hidden" asp-for="RoatpUkprnOnRegister" />
                    <input type="hidden" asp-for="RoatpProviderRoute" />
                    <input type="hidden" asp-for="RoatpStatusDate" />
                    <input type="hidden" asp-for="RoatpStatus" />
                    <input type="hidden" asp-for="RoatpRemovedReason" />

                    <partial name="~/Views/Roatp/Apply/Gateway/Pages/_GatewayApprovalSection.cshtml" />
                    <button class="govuk-button" type="submit">Save and continue</button>
                </form>
            </div>
        </div>
    }
</main>
