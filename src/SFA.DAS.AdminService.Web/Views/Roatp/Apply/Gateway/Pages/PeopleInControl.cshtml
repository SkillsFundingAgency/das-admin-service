@using SFA.DAS.AssessorService.Domain.Extensions
@model SFA.DAS.AdminService.Web.ViewModels.Roatp.Gateway.PeopleInControlPageViewModel

@{
        ViewBag.Title = $"Gateway - {Model.Heading}";
        Layout = "_Layout";
}

    @{ await Html.RenderPartialAsync("~/Views/Roatp/Apply/Gateway/Pages/_GatewayAssessmentBreadcrumb.cshtml"); }
<main class="govuk-main-wrapper " id="main-content" role="main">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            @{ await Html.RenderPartialAsync("~/Views/Roatp/Apply/Gateway/Pages/_GatewayApprovalValidationSummary.cshtml"); }

            <span class="govuk-caption-xl">
                @Model.Caption
            </span>

            <h1 class="govuk-heading-xl">@Model.Heading</h1>


            <div class="govuk-!-margin-bottom-4">
                @if (Model.Ukprn!=null)
                    {
                <p class="govuk-body govuk-!-margin-bottom-0">
                    UKPRN: @Model.Ukprn
                </p>
                    }
                @if (Model.ApplyLegalName!=null)
                {
                    <p class="govuk-body govuk-!-margin-bottom-0">
                        Legal Name: @Model.ApplyLegalName
                    </p>
                }
                <p class="govuk-body govuk-!-margin-bottom-0">
                        Type of organisation: @Model.TypeOfOrganisation
                    </p>
                
                @if (!string.IsNullOrEmpty(Model.CompanyNumber))
                {
                    <p class="govuk-body govuk-!-margin-bottom-0">
                        Company number: @Model.CompanyNumber
                    </p>
                }

                @if (!string.IsNullOrEmpty(Model.CharityNumber))
                {
                    <p class="govuk-body govuk-!-margin-bottom-0">
                        Charity number: @Model.CharityNumber
                    </p>
                }

                @if (Model.ApplicationSubmittedOn!=null)
                    {
                <p class="govuk-body govuk-!-margin-bottom-0">
                    Application submitted on: @Model.ApplicationSubmittedOn.ToSfaShortDateString()
                </p>
                    }

                @if (Model.TypeOfOrganisation.ToLower()!="partnership" && Model.TypeOfOrganisation.ToLower()!="statutory institute" &&  Model.SourcesCheckedOn!=null)
                    {
                <p class="govuk-body govuk-!-margin-bottom-0">
                    Sources checked on:  @Model.SourcesCheckedOn.ToSfaShortDateString()
                </p>
                    }
            </div>
        </div>
    </div>
<div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            @{
                await Html.RenderPartialAsync("~/Views/Roatp/Apply/Gateway/Pages/_PeopleInControlTable.cshtml", Model.CompanyDirectorsData);
                await Html.RenderPartialAsync("~/Views/Roatp/Apply/Gateway/Pages/_PeopleInControlTable.cshtml", Model.PscData);
                await Html.RenderPartialAsync("~/Views/Roatp/Apply/Gateway/Pages/_PeopleInControlTable.cshtml", Model.TrusteeData);
                await Html.RenderPartialAsync("~/Views/Roatp/Apply/Gateway/Pages/_PeopleInControlTable.cshtml", Model.WhosInControlData);
            }
        </div>
    </div>
@if (Model.ApplicationId != Guid.Empty)
                {
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <form class="js-disable-on-submit" asp-action="EvaluatePeopleInControlPage" asp-controller="RoatpGatewayPeopleInControl">
                <input type="hidden" name="ApplicationId" value="@Model.ApplicationId" />
                <input type="hidden" name="PageId" value="@Model.PageId" />
                <input type="hidden" asp-for="Caption" />
                <input type="hidden" asp-for="Heading" />
                <input type="hidden" name="ApplicationSubmittedOn" value="@Model.ApplicationSubmittedOn" />
                <input type="hidden" name="Ukprn" value="@Model.Ukprn" />
                <input type="hidden" name="SourcesCheckedOn" value="@Model.SourcesCheckedOn" />
                <input type="hidden" name="ApplyLegalName" value="@Model.ApplyLegalName" />
                <input type="hidden" name="TypeOfOrganisation" value="@Model.TypeOfOrganisation" />
                <input type="hidden" asp-for="NoSelectionErrorMessage" />
                @{ await Html.RenderPartialAsync("~/Views/Roatp/Apply/Gateway/Pages/_GatewayApprovalSection.cshtml"); }
                <button class="govuk-button" type="submit">Save and continue</button>
            </form>
        </div>
    </div>
    }
</main>
