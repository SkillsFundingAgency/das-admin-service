@using SFA.DAS.AdminService.Common.Extensions;
@using SFA.DAS.AssessorService.ApplyTypes.Roatp;

@model SFA.DAS.AdminService.Web.ViewModels.Roatp.Gateway.RoatpGatewayConfirmOutcomeViewModel

@{
    ViewBag.Title = "Gateway - Overall gateway outcome";
    Layout = "_Layout";
}

<div class="govuk-breadcrumbs">
    <ol class="govuk-breadcrumbs__list">
        <li class="govuk-breadcrumbs__list-item">
            <a asp-controller="Dashboard" asp-action="Index" class="govuk-breadcrumbs__link">RoATP dashboard</a>
        </li>
        <li class="govuk-breadcrumbs__list-item">
            <a asp-controller="RoatpGateway" asp-action="NewApplications" class="govuk-breadcrumbs__link">RoATP applications</a>
        </li>
        <li class="govuk-breadcrumbs__list-item">
            <a asp-controller="RoatpGateway" asp-action="ViewApplication" asp-route-applicationId="@Model.ApplicationId" class="govuk-breadcrumbs__link">Application assessment overview</a>
        </li>
        <li class="govuk-breadcrumbs__list-item" aria-current="page">Overall gateway outcome </li>
    </ol>
</div>
<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <span class="govuk-caption-m">Overall gateway outcome</span>
            <h1 class="govuk-heading-xl">Are you sure you want to decline this application?</h1>
        </div>
    </div>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <h2 class="govuk-heading-l govuk-!-margin-top-5">Comments</h2>
            <p class="govuk-body">@Model.GatewayReviewComment</p>
        </div>
    </div>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <div class="govuk-warning-text govuk-!-margin-top-9">
                <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
                <strong class="govuk-warning-text__text">
                    <span class="govuk-warning-text__assistive">Warning</span>
                    This application will be declined and go to governance.
                </strong>
            </div>
            <form action="" method="post" class="form">
                <div class="govuk-form-group">
                    <div class="govuk-radios govuk-radios--inline">
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="gw-abctraining-outcome-confirm-1" name="gw-abctraining-outcome-confirm" type="radio" value="Yes">
                            <label class="govuk-label govuk-radios__label" for="gw-abctraining-outcome-confirm-1">
                                Yes
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="gw-abctraining-outcome-confirm-2" name="gw-abctraining-outcome-confirm" type="radio" value="No">
                            <label class="govuk-label govuk-radios__label" for="gw-abctraining-outcome-confirm-2">
                                No
                            </label>
                        </div>
                    </div>
                </div>
                <button type="submit" class="govuk-button">
                    Save and continue
                </button>
            </form>
            <p class="govuk-body"><a class="govuk-link" href="/mvp-gateway/v5/applications/gateway/tasklist-abctraining">Back to application assessment overview</a></p>
        </div>
    </div>
</main>
