@using SFA.DAS.QnA.Api.Types.Page
@model SFA.DAS.AdminService.Web.ViewModels.Apply.Applications.RoatpSectionViewModel

@{
    ViewBag.Title = @Model.Title ?? "Section not active";
    Layout = "_Layout";
}

<a class="govuk-back-link" asp-action="Sequence" asp-controller="RoatpApplication" asp-route-applicationId="@Model.ApplicationId" asp-route-sequenceNo="@Model.SequenceNo">Back</a>

<main class="govuk-main-wrapper " id="main-content" role="main">
    @if (Model.Section == null)
    {
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-xl">Section not active</h1>
            </div>
        </div>
    }
    else
    {
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
                        <h2 class="govuk-error-summary__title" id="error-summary-title">
                            There is a problem
                        </h2>
                        <div class="govuk-error-summary__body">
                            <ul class="govuk-list govuk-error-summary__list">
                                <li><a sfa-validation-for="IsSectionComplete"></a></li>
                            </ul>
                        </div>
                    </div>
                }

                <h1 class="govuk-heading-xl">@Model.Title</h1>

                @{ await Html.RenderPartialAsync("~/Views/Roatp/Apply/_OrganisationDetails.cshtml", Model); }
            </div>
        </div>

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <dl class="govuk-summary-list">
                    @foreach (var pg in Model.Section.QnAData.Pages.Where(p => p.Active))
                    {
                        <div class="govuk-summary-list__row">
                            <dt class="govuk-summary-list__key">
                                <h3 class="govuk-heading-s govuk-!-margin-bottom-1">
                                    @pg.LinkTitle
                                </h3>

                                @if (pg.HasNewFeedback)
                                {
                                    <div class="govuk-tag">
                                        Feedback added
                                    </div>
                                }
                                @if (pg.HasFeedback && pg.AllFeedbackIsCompleted)
                                {
                                    <div class="govuk-tag">
                                        Answer updated
                                    </div>
                                }
                            </dt>
                        <dd class="govuk-summary-list__value">
                            @foreach (var answerPage in pg.PageOfAnswers)
                            {
                                foreach (var answer in answerPage.Answers)
                                {
                                    var question = pg.Questions.SingleOrDefault(q => q.QuestionId == answer.QuestionId);
                                    if (question != null)
                                    {
                                        <h3 class="govuk-heading-s govuk-!-margin-bottom-1">@Html.Raw(question.Label)</h3>
                                    }

                                    if (question != null && !string.IsNullOrWhiteSpace(question.QuestionBodyText))
                                    {
                                        <details class="govuk-details">
                                            <summary class="govuk-details__summary">
                                                <span class="govuk-details__summary-text">
                                                    View question details
                                                </span>
                                            </summary>
                                            <div class="govuk-details__text">
                                                @Html.Raw(question.QuestionBodyText)
                                            </div>
                                        </details>
                                    }
                                    if (question != null && question.Input.Type == "FileUpload")
                                    {
                                        <p class="govuk-body">
                                            <a class="govuk-link" href="@Url.Action("DownloadFile", "RoatpApplication",
                         new
                         {
                             Id = Model.ApplicationId,
                             sequenceNo = Model.SequenceNo,
                             sectionNo = Model.SectionNo,
                             pageId = pg.PageId,
                             questionId = answer.QuestionId,
                             filename = answer.Value
                         })">
                                                @answer.Value
                                            </a>
                                        </p>
                                    }
                                    else if (question != null && question.Input.Type == "Address")
                                    {
                                        var address = Model.Addresses[question.QuestionId];
                                        if (address != null)
                                        {
                                            <p class="govuk-body">
                                                @address.CommaSeperatedAddress()
                                            </p>
                                        }
                                    }
                                    else if (question != null && question.Input.Type == "TabularData")
                                    {
                                        await Html.RenderPartialAsync("~/Views/Roatp/Apply/Applications/_TabularData.cshtml", answer.Value);
                                    }
                                    else
                                    {
                                        if (@answer.Value != ",,")
                                        {
                                            @if (Model.QuestionContainsPredefinedOptions(question))
                                            {
                                                <p class="govuk-body">@Html.Raw(Model.DisplayAnswerValue(answer, question))</p>
                                            }
                                            else
                                            {
                                                <p class="govuk-body">@Model.DisplayAnswerValue(answer, question)</p>                                            
                                            }
                                        }
                                    }
                                }
                            }
                            </dd>

                            <dd class="govuk-summary-list__actions">
                                <p class="govuk-body">
                                    <a class="govuk-link" asp-action="Page" asp-controller="RoatpApplication" asp-route-applicationId="@Model.ApplicationId" asp-route-sequenceNo="@Model.SequenceNo" asp-route-sectionNo="@Model.SectionNo" asp-route-pageId="@pg.PageId">
                                        @if (pg.HasNewFeedback)
                                        {
                                            <text>View or amend feedback</text>
                                        }
                                        else
                                        {
                                            <text>Add feedback</text>
                                        }
                                    </a>
                                </p>
                            </dd>

                        </div>
                    }
                </dl>
            </div>
        </div>
        

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <form class="js-disable-on-submit" asp-action="EvaluateSection" asp-controller="RoatpApplication" asp-route-applicationId="@Model.ApplicationId" asp-route-sequenceNo="@Model.SequenceNo" asp-route-sectionNo="@Model.SectionNo">
                    <div class="govuk-form-group" sfa-anyvalidationerror-class="govuk-form-group--error">
                        <fieldset class="govuk-fieldset">

                            <legend id="IsSectionComplete">
                                <h2 class="govuk-heading-l">
                                    Has this section been assessed?
                                </h2>
                            </legend>

                            <span class="govuk-error-message" asp-validation-for="IsSectionComplete"></span>

                            <div class="govuk-radios govuk-radios--inline">
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" asp-for="IsSectionComplete" id="options_yes" type="radio" value="True" sfa-validation-for="IsSectionComplete" />
                                    <label class="govuk-label govuk-radios__label" for="options_yes">
                                        Yes
                                    </label>
                                </div>
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" asp-for="IsSectionComplete" id="options_no" type="radio" value="False" sfa-validation-for="IsSectionComplete" />
                                    <label class="govuk-label govuk-radios__label" for="options_no">
                                        No
                                    </label>
                                </div>
                            </div>

                        </fieldset>
                    </div>
                    <button class="govuk-button" type="submit">Save and continue</button>
                </form>
            </div>
        </div>
    }

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <p class="govuk-body">
                <a class="govuk-link" asp-action="Sequence" asp-controller="RoatpApplication" asp-route-applicationId="@Model.ApplicationId" asp-route-sequenceNo="@Model.SequenceNo">Return to application overview</a>
            </p>
        </div>
    </div>
</main>