@model SFA.DAS.AdminService.Web.ViewModels.Merge.MergeOverviewViewModel

@{
    ViewBag.Title = "Merge overview";
    Layout = "_Layout";
}

@*<a class="govuk-back-link" asp-controller="MergeOrganisations" asp-action="MergeLog"> Back </a>*@

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <partial name="_ValidationSummaryPartial" />

            <h1 class="govuk-heading-xl">
                Merge organisations
            </h1>

            <dl class="govuk-summary-list">
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Primary EPAO
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @(string.IsNullOrEmpty(Model.PrimaryEpaoName) ? "Not yet confirmed" : Model.PrimaryEpaoName)
                    </dd>
                    <dd class="govuk-summary-list__actions">
                        <a class="govuk-link" asp-controller="MergeOrganisations" asp-action="SearchEpao" asp-route-type="primary">
                            Change
                        </a>
                    </dd>
                </div>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Secondary EPAO
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @(string.IsNullOrEmpty(Model.SecondaryEpaoName) ? "Not yet confirmed" : Model.SecondaryEpaoName)
                    </dd>
                    <dd class="govuk-summary-list__actions">
                        <a class="govuk-link" asp-controller="MergeOrganisations" asp-action="SearchEpao" asp-route-type="secondary">
                            Change
                        </a>
                    </dd>
                </div>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Secondary EPAO effective to
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @(Model.SecondaryEpaoEffectiveTo.HasValue ? Model.SecondaryEpaoEffectiveTo.Value.ToString("dd MMMM yyyy") : "Not yet confirmed")
                    </dd>
                    <dd class="govuk-summary-list__actions">
                        <a class="govuk-link" asp-controller="MergeOrganisations" asp-action="SetSecondaryEpaoEffectiveToDate">
                            Change
                        </a>
                    </dd>
                </div>
            </dl>

            <form asp-controller="MergeOrganisations" asp-action="MergeOverview">
                <input type="hidden" asp-for="PrimaryEpaoId" />
                <input type="hidden" asp-for="PrimaryEpaoName" />
                <input type="hidden" asp-for="SecondaryEpaoId" />
                <input type="hidden" asp-for="SecondaryEpaoName" />
                <input type="hidden" asp-for="SecondaryEpaoEffectiveTo" />

                <button class="govuk-button" type="submit"> Continue </button>
            </form>
        </div>
    </div>
</main>